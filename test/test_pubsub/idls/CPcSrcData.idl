#include "CDataBase.idl"

//点云点的结构体
struct CPcPoint
{
    float fX;             // 点的x坐标值,单位m
    float fY;             // 点的y坐标值,单位m
    float fZ;             // 点的z坐标值,单位m
    float fIntensity;     // 点的强度值
    float fConfidence;    // 点的置信度
};

//点云原始数据结构体
struct CPcSrcData : CDataBase
{
    octet                ucLidarId;    //雷达编号
    unsigned long        unPointNums;  //点数量
    sequence<CPcPoint>   vecPoints;    //点集
};

//时间匹配好的点云原始数据结构体
struct CPcSrcDataTimeMatch : CDataBase
{
    //匹配好的每一路点云数据
	sequence<CPcSrcData> 	vecSrcData;
};

//雷达原始数据包结构体
struct CPcSrcPacketData : CDataBase
{
    //一帧点云的原始数据包，每个元素都是1350字节的包数据转换成的string
    sequence<string>        vecPacketData;
};
